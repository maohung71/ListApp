<h1>LeVEL 3 Individual Collection</h1>
<h1>Items#show</h1>
<p>Find me in app/views/items/show.html.erb</p>
<div class="singleList">
  <h2><%= @item.name %></h2>
  <h2><%= @item.category.subject %></h2>
  <h2><%= @item.description  %></h2>
  <%= link_to 'Home', list_path %>
  <%= link_to 'Edit', edit_item_path %>
  <%= link_to 'Delete', item_path(@item), method: :delete, data: { confirm: 'Are you sure?' } %>
</div>








