<div class = "form">
 <%= form_tag :action => 'create' do %>

<p><label for = "item_name">name</label>
<%= text_field 'items', 'name' %></p>

<p><label for = "item_description">description</label>
<%= text_field 'items', 'description' %></p>

<p><label for = "item_category_id">Category</label>
<%= collection_select(:items, :category_id, @categories, :id, :subject, prompt: true) %></p>

<%= submit_tag "Create" %>

<% end -%>

