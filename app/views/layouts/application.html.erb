<!DOCTYPE html>
<html>
  <head>
    <title>ListApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-default">
     <div class="container">
      <div class="navbar-header">
        <%= link_to "Home", root_path, class: "navbar-brand" %>
      </div>

      <!-- conditional sign-in -->
      <ul class ="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <%= link_to "Sign Out", destroy_user_session_path,
            method: :delete %>
          </li>
        <% else %>
        <li>
          <%= link_to "Sign Up", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "Log In", new_user_session_path %>
        </li>
        <% end %>
      </ul>

      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
        <li>
          <%= link_to "Add New Collection", new_list_path, class: "navbar-brand" %>
        </li>
        <% end %>
      </ul>


      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"
          role="button" aria-expanded="false">Sort <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" role="menu">
          <% Category.all.each do |category| %>
            <li class="<% 'active' if params[:category] == category
            .subject%>">
              <%= link_to category.subject, list_items_path(category.subject), class: "link" %>
            </li>
          <% end %>
        </ul>
        </li>

      </ul>



     </div>
    </nav>


    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
