<h1>Lists#index</h1>

<div class="itemscontainer">
  <ul>
    <% @lists.each do |l| %>
      <li class ='List'>
        <h2><%= link_to l.name, list_path(l) %></h2>
        <p><%= link_to l.description, list_path(l) %></p>
        <div class ='btn'>
          <p><%= link_to 'Edit', edit_list_path(l) %></p>
          <p><%= link_to 'Delete', l, method: :delete, data: { confirm: 'Are you sure?' }  %></p>
        </div>
      </li>
    <% end %>
  </ul>

</div>
